<script>
    function validateFileName(fileName) {
        var regex = /^[a-zA-Z0-9_]+$/;
        return regex.test(fileName);
    }
    
    $('#uploadForm').submit(function (e) {
    e.preventDefault(); // 阻止表单的默认提交行为

@using System.Globalization
@using Resources
@inject ILocalizer localizer
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@localizer.Text.title</title>
    <link rel="stylesheet prefetch" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/bootstrap-table.min.css">
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap-table.min.js"></script>
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
</head>
<body>
    <!--三特色區塊-->
    <section class="main_area">
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-sm-7 col-xs-12 ill"><img src="~/images/index_pic.png" alt=""></div>
                    <div class="col-sm-5 col-xs-12 login">
                        <img src="~/images/logo.png" alt="">
                        <form method="post"></form>
                        <form class="form" action="" method="post" role="form">
                            <input id="csrf_token" name="csrf_token" value="ImI1NjE2Yzk4MmQ2NDRkNDA0Y2QxMDQyOWUxMDE0MDJiZmVjNzU0MTki.DOU4Hw.WOVo5wynmis6ZU8Vblq8lvDqm0s" type="hidden">
                            <div class="form-group required">
                                <label class="control-label" for="username">@localizer.Text.account</label>
                                <input class="form-control" id="username" name="username" required="" placeholder="User ID" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%" type="text">
                            </div>
                            <div class="form-group required">
                                <label class="control-label" for="password">@localizer.Text.passwd</label>
                                <input class="form-control" id="password" name="password" required="" placeholder="Password" value="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%" type="password">
                            </div>
                            <input class="btn btn-default" id="submit" name="submit" value="@localizer.Text.login" type="submit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="features">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="col-xs-2 features_box text-center col-lg-push-1">
                        <img src="~/images/f01.png" alt="">
                        <h6>@localizer.Text.index_feature_01</h6>
                    </div>
                    <div class="col-xs-2 features_box text-center col-lg-push-1">
                        <img src="~/images/f03.png" alt="">
                        <h6>@localizer.Text.index_feature_02</h6>
                    </div>
                    <div class="col-xs-2 features_box text-center col-lg-push-1">
                        <img src="~/images/f02.png" alt="">
                        <h6>@localizer.Text.index_feature_03</h6>
                    </div>
                    <div class="col-xs-2 features_box text-center col-lg-push-1">
                        <img src="~/images/f04.png" alt="">
                        <h6>@localizer.Text.index_feature_04</h6>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section_footer">
        <div class="container">
            <p>@localizer.Text.web_contentlist</p>
        </div>
    </section>
</body>
</html>